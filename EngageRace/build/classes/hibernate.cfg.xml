<?xml version='1.0' encoding='utf-8'?>

<!DOCTYPE hibernate-configuration PUBLIC

"-//Hibernate/Hibernate Configuration DTD//EN"

"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

<session-factory>
<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
<property name="hibernate.connection.url">jdbc:mysql://chapolin:3306/engage_race</property>
<property name="hibernate.connection.username">root</property>
<property name="hibernate.connection.password">manager</property>
<property name="hibernate.connection.pool_size">10</property>
<property name="show_sql">true</property>
<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
<property name="hibernate.current_session_context_class">thread</property>

<mapping class="com.ilegra.engagerace.entity.Pontuacao"/>
<mapping class="com.ilegra.engagerace.entity.Administrador"/>
<mapping class="com.ilegra.engagerace.entity.Programa"/>
<mapping class="com.ilegra.engagerace.entity.TipoPrograma"/>
<mapping class="com.ilegra.engagerace.entity.Area"/>
<mapping class="com.ilegra.engagerace.entity.Usuario"/>

</session-factory>
</hibernate-configuration>